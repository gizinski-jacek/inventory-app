doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/reset.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        li
          a(href='/') Home
        li.dropdown-hover
          a(href='/catalog') Catalog
          ul.dropdown
            each category in nav_category_list
              li
                a(href=category.url) #{category.name}
            li.category-create
              a(href='/category/create') + New category
      header.logo
        a(href='/') Formula 1 Official Store
    if nav_current_directory.length
      div.current-directory
        ul
          each path in nav_current_directory
            li
              a(href=path.setPath) #{path.name}
    main
      block content
