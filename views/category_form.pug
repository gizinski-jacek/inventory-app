extends layout

block content
  div.container-form
    div.category-form
      h1= title
      form(method='POST' action='') 
        label(for='name') Name:
          input#name(type='text' name='name' minlength=1 maxlength=15 value=(category===undefined ? '' : category.name) placeholder=`Category name`)
        label(for='description') Description:
          textarea#description(type='text' name='description' rows=7 maxlength=100 placeholder=`Category description`) #{category===undefined ? '' : category.description}
        button.btn(type='submit') Submit

      if errors
        ol.errors-msg
          for error in errors
            li!= error.msg
